button
  height 48px
  width 180px
  text-align center
  color #fff
  font-size 1rem
  font-weight 200
  background transparent
  border 1px solid #fff
  border-radius 25px
  margin 20px 0
  cursor pointer
  transition all 0.3s ease
  outline none
  box-shadow: 0 2px 2px 0 rgba(0,0,0,.14),0 3px 1px -2px rgba(0,0,0,.2),0 1px 5px 0 rgba(0,0,0,.12);
  
.fill-green
    background-color #B1E95C
    color white
    align-self center
    border-color transparent

.btn-green
  border 1px solid #B1E95C
  color #B1E95C
  align-self center
  &:hover
        opacity 85%
        background-color #B1E95C
        color white

.btn-blue
  border 1px solid #066682
  color #066682
  align-self center
  &:hover
        opacity 85%
        background-color #066682
        color white
