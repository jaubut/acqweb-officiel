    color white
.red
    background-color #ff5252
    color white
    
.container 
	padding 5% 20%
@media only screen and (max-device-width: 568px) and (min-device-width: 320px) and (orientation: portrait)
    .container
        padding 5%
.container2
    margin: 0 20%
    
.side-blocks 
    width 50%
    height 100vh
    display inline-block
    vertical-align top
    background-color antiquewhite
    position fixed
@media only screen and (max-device-width: 568px) and (min-device-width: 320px) and (orientation: portrait)
    p
        font-size 1rem
    .side-blocks
        width: 100%;
        height: 25vh;
        position relative
    .flex-wrapper 
      display: -webkit-box;
      display: -webkit-flex;
      display: -ms-flexbox;
      display: flex;
      height: 100vh;

    .main-content 
        background-color blue
        overflow: scroll;
        padding 25px
        overflow visible
        float none

    .row 
        display block
        width 50%
        background-color dodgerblue

    .try-box
        width: 100%;
        background-color #aaa
        z-index: 1;
        position fixed
    .try
        width 50%
        height 100vh
        display inline-block
        vertical-align top
        background-color antiquewhite
    
    .try-1
        height: 25vw;
        width: 50%;
        display: inline-block;
        background-position: center;
        background-repeat: no-repeat;
        background-size: cover;
        position: relative;
        text-align center
        vertical-align middle
        p
            color transparent
        h1
            font-size 20px
            color transparent     
        &:hover
            h1 
                color black
            p
                color white
            filter brightness(70%)
            -webkit-transition:all 0.45s ease-in-out;
            -moz-transition:all 0.45s ease-in-out;
            -o-transition:all 0.45s ease-in-out;
            -ms-transition:all 0.45s ease-in-out;
            transition:all 0.45s ease-in-out;


    .try-2
        width: 50%;
        height 100vh
        float right
        vertical-align: top;
        text-align justify
        h3
            color black
        p 
            color black

    .center
        text-align center
        padding 50% 25%
        
    .main-wrapper
        padding 25px 0
        
    
        
    
        
    