.cont_produit
    margin-top 40px
    margin-right 10px
    position: relative;
    width: 280px;
    height: 340px;
    border-radius:5px;
    top: -20px;
    float: left;
    z-index: 2;
    -webkit-transition: all 0.5s;
    -o-transition: all 0.5s;
    transition: all 0.5s;
    transition: all 0.5s; 
    box-shadow: 1px 1px 20px -5px rgba(0,0,0,0.5);

.produit_img_back 
    position absolute
    width: 100%;
    height: 100%;
    overflow: hidden;
    border-radius:5px ;

.produit_img_back img 
    height 100%
    opacity: 0.7;
    -webkit-transition: all 0.5s;
    -o-transition: all 0.5s;
    transition: all 0.5s;
    transition: all 1s;
    &:hover 
        transform: scale(1.5);

.price
    display: inline-block;
    background-color: #333;
    color: #fff;
    padding: 2px 5px;
    
.produit_detalles 
    position: absolute;
    bottom 0
    height 95px
    border-radius 0 5px 
    background white
    -webkit-transition: all 0.5s;
