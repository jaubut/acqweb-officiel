a
  &.produit-card
    display block
    background-color white
    float left
    border-radius 4px
    position relative
    margin-right 10px
    width calc(6vw + 9vh - 2px)
    min-width 170px
    height calc(20vh + 7vw)
    min-height 280px
    color #fff
    -webkit-transition opacity 0.4s ease-out
    -moz-transition opacity 0.4s ease-out
    -o-transition opacity 0.4s ease-out
    transition opacity 0.4s ease-out
    &:before
      content ' '
      display block
      position absolute
      left 0
      top 0
      width 100%
      height 100%
      z-index 1
      opacity 0.15
      background-color #18171f
      border-radius 4px
    &:after
      content ' '
      display block
      position absolute
      left 0
      bottom 0
      width 100%
      height 60%
      z-index 2
      opacity 0.7
      border-radius 4px
    &:hover
      opacity 0.85
  &.last
    display block
    background-color #fff
    width 58px
    min-width 58px
    float left
    height calc(26vh + 10vw)
    min-height 560px